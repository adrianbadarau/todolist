<h1><%= @todolist.title %></h1>

<table class="todo_items">
  <thead>
  <tr>
    <th width="25%">Completed?</th>
    <th width="65%">Content</th>
    <th width="10%">Functions</th>
  </tr>
  </thead>
  <% @todolist.todo_items.each do |todo_item| %>
    <tr id="<%= dom_id(todo_item) %>">
      <% if todo_item.completed_at.blank? %>
          <td><%= link_to 'Mark Completed', complete_todolist_todo_item_path(todo_item), method: :patch %></td>
      <% else %>
          <td><%= todo_item.completed_at %></td>
      <% end %>

      <td><%= todo_item.content %></td>

      <td><%= link_to 'Edit', edit_todolist_todo_item_path(todo_item) %>
      <%= link_to 'Destroy', todolist_todo_item_path(todo_item), method: :delete, data: {confirm: 'Are you sure ?'}  %></td>

    </tr>
  <% end %>
</table>

<p><%= link_to 'New Todo Item', new_todolist_todo_item_path %></p>